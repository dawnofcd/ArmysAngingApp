rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Avatars folder - users can read all, but only upload/delete their own
    match /avatars/{userId}_{timestamp}.jpg {
      // Anyone authenticated can read avatars
      allow read: if request.auth != null;
      
      // Users can only upload/delete their own avatar
      allow write: if request.auth != null && 
                     userId == request.auth.uid;
      
      // Admins can do anything
      allow write: if request.auth != null && 
                     firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Fallback: allow authenticated users to read/write (for development)
    // Remove this in production and use specific rules above
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}





